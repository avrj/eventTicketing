<table class="table">
  <thead>
  <tr>
    <th>Table</th>
    <th>Seat</th>
    <th>Type</th>
    <th>Price</th>
    <th>Reservation code</th>
  </tr>
  </thead>

  <tbody>
  <% @seats.each do |seat| %>
      <tr>
        <td><%= seat.ticket.ticket_type.name %></td>
        <td><%= seat.table %></td>
        <td><%= seat.seat %></td>
        <td><%= number_to_currency(seat.ticket.ticket_type.price) %></td>
        <% if @order.paid %>
            <td>koodi</td>
        <% else %>
            <td>Unavailable</td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>