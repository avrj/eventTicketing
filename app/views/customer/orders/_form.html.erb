<%= simple_form_for(@order, url: customer_orders_path) do |f| %>

    <%= f.error_notification %>

    <table class="table">
      <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Qty</th>
        <th>Free</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @ticket_types.each do |ticket_type| %>
          <tr>
            <td><%= ticket_type.name %></td>
            <td><%= ticket_type.price %></td>
            <td><input type="number" name="order[tickets[<%= ticket_type.name %>]]" min="0" value="0"/></td>
            <td>0</td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <div class="form-inputs">
      <%= f.input :paid %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
