<table class="table">
  <thead>
  <tr>
    <th>Type</th>
    <th>Price</th>
    <th>Reservation code</th>
  </tr>
  </thead>
  <tbody>
  <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.ticket_type.name %></td>
        <td><%= number_to_currency(ticket.ticket_type.price) %></td>
        <% if @order.paid %>
            <td>koodi</td>
        <% else %>
            <td>Unavailable</td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>