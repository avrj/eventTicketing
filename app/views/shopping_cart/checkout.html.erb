<h1>Checkout</h1>

<% if @seats %>
    <h2>Seats</h2>
    <table class="table">
      <thead>
      <tr>
        <th>Type</th>
        <th>Table</th>
        <th>Seat</th>
        <th>Price</th>
      </tr>
      </thead>

      <tbody>
      <% @seats.each do |seat| %>
          <tr>
            <td><%= seat.ticket.ticket_type.name %></td>
            <td><%= seat.table %></td>
            <td><%= seat.seat %></td>
            <td><%= number_to_currency(seat.ticket.ticket_type.price) %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>
<% if @tickets %>
    <h2>Tickets</h2>
    <table class="table">
      <thead>
      <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Subtotal</th>
      </tr>
      </thead>

      <tbody>
      <% @ticket_types.each do |ticket_type| %>
          <% if @tickets[ticket_type.id.to_s].to_i > 0 %>
              <tr>
                <td><%= ticket_type.name %></td>
                <td><%= @tickets[ticket_type.id.to_s] %></td>
                <td><%= number_to_currency(ticket_type.price) %></td>
                <td><%= number_to_currency(ticket_type.price * @tickets[ticket_type.id.to_s].to_i) %></td>
              </tr>
          <% end %>
      <% end %>
      </tbody>
    </table>
<% end %>

<p><strong>Total:</strong> <%= number_to_currency(@shopping_cart_total_price) %></p>

<%= form_tag orders_path do %>
    <%= check_box_tag 'is_paid' %> <%= label_tag 'paid', 'Is paid?' %><br />
    <%= submit_tag 'Confirm order' %>
<% end %>

<br />

<%= link_to 'Back to shopping cart', shopping_cart_path %>