<%= simple_form_for(@admin, url: admin_users_path) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :username %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
      <%= f.input :superuser %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Create Admin", class: "btn btn-primary" %>
    </div>
<% end %>
