<h1 class="page-header">
  <span>Admins</span>
  <%= link_to 'New Admin', new_admin_user_path, class: "btn btn-primary pull-right" %>
</h1>

<p>Total of <%= pluralize(@admins.count, "admin") %>.</p>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Username</th>
    <th>Level</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.username %></td>
        <td><%= admin.level %></td>
        <td>
          <div class="btn-group pull-right" role="group" aria-label="...">
          <%= link_to 'Show', admin_user_path(admin), class: "btn btn-success" %>
          <%= link_to 'Edit', edit_admin_user_path(admin), class: "btn btn-primary" %>
          <%= link_to 'Destroy', admin_user_path(admin), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %>
        </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>