<ol class="breadcrumb">
  <li><%= link_to "Tickets", admin_tickets_path %></li>
  <% if current_page == "show" %>
    <li class="active">Ticket #<%= @ticket.id.to_s %></li>
  <% elsif current_page == "new" %>
      <li class="active">New</li>
  <% elsif current_page == "edit" %>
      <li><%= link_to "Ticket #"+@ticket.id.to_s, admin_ticket_path(@ticket) %></li>
      <li class="active">Edit</li>
  <% end %>
</ol>