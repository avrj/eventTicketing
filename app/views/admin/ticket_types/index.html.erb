<h1 class="page-header">Ticket Types</h1>

<% if !@ticket_types.any? %>
    <p>Looks like there are no ticket types yet.</p>
<% else %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Reserved</th>
          <th>Free</th>
          <th>Total</th>
          <th>Type</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @ticket_types.each do |ticket_type| %>
          <tr>
            <td><%= ticket_type.name %></td>
            <td><%= number_to_currency(ticket_type.price) %></td>
            <td><%= ticket_type.reserved.count %></td>
            <td><%= ticket_type.free.count %></td>
            <td><%= ticket_type.tickets.count %></td>
            <% if ticket_type.is_seat %>
            <td>Seat</td>
                <% else %>
            <td>Normal</td>
                <% end %>
            <td><%= link_to 'Show', admin_ticket_type_path(ticket_type) %></td>
            <td><%= link_to 'Edit', edit_admin_ticket_type_path(ticket_type) %></td>
            <td><%= link_to 'Destroy', admin_ticket_type_path(ticket_type), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
<% end %>
<br>

<%= link_to 'New Ticket type', new_admin_ticket_type_path, class: "btn btn-primary" %>
