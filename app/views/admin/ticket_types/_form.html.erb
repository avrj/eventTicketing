<%= simple_form_for(@ticket_type, url: admin_ticket_types_path) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :is_seat %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Create Ticket Type", class: "btn btn-primary" %>
    </div>
<% end %>
