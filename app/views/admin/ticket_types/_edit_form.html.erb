<%= simple_form_for(@ticket_type, url: admin_ticket_type_path) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update Ticket Type", class: "btn btn-primary" %>
  </div>
<% end %>
